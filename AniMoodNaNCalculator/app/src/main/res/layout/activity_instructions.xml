<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/instructions_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


<androidx.cardview.widget.CardView
        android:id="@+id/instructions_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#169C91"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:gravity="center_horizontal">

            <!-- Row for title and close button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/instructionsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/japan_daisuki"
                    android:text="@string/instructions_title"
                    android:textAlignment="viewEnd"
                    android:textColor="#fff"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <!-- Close/Cross Button -->
                <ImageView
                    android:id="@+id/closeBtn"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/close"
                    android:focusable="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_close" />
            </LinearLayout>

            <!-- Instructions Content -->
            <LinearLayout
                android:id="@+id/instructionsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_text"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/japan_daisuki"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/instruction1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instruction_1"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:fontFamily="@font/japan_daisuki"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/instruction2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instruction_2"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:fontFamily="@font/japan_daisuki"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/instruction3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instruction_3"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:fontFamily="@font/japan_daisuki"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/instruction4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instruction_4"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:fontFamily="@font/japan_daisuki"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
